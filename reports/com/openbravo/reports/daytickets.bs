report = new com.openbravo.pos.reports.PanelReportBean();

report.setTitleKey("Menu.Ticket");
report.setReport("/com/openbravo/reports/daytickets");
report.setResourceBundle("com/openbravo/reports/daytickets_messages");

report.setSentence("SELECT " + 
                   "    PAYMENTS.TOTAL AS PAYMENTS_TOTAL, " +
                   "    TICKETS.TICKETID AS TICKETS_TICKETID, " +
                   "    CASE " +
				   "        WHEN PAYMENTS.PAYMENT = 'cash' THEN 'Espece' " +
				   "        WHEN PAYMENTS.PAYMENT = 'paperin' THEN 'Ticket resto' " +
				   "        WHEN PAYMENTS.PAYMENT = 'cheque' THEN 'Cheque' " +
				   "        WHEN PAYMENTS.PAYMENT = 'chequerefund' THEN 'Rendu Cheque' " +
				   "        WHEN PAYMENTS.PAYMENT = 'cashrefund' THEN 'Rendu' " +
				   "        WHEN PAYMENTS.PAYMENT = 'magcard' THEN 'CB' " +
				   "        WHEN PAYMENTS.PAYMENT = 'magcardrefund' THEN 'Rendu CB' " +
				   "        WHEN PAYMENTS.PAYMENT = 'free' THEN 'Offert' " +
				   "        WHEN PAYMENTS.PAYMENT = 'debt' THEN 'Impaye' " +
				   "        ELSE PAYMENTS.PAYMENT " +
				   "    END " +
				   "    AS PAYMENTS_PAYMENT, " +
                   "    DATE(RECEIPTS.DATENEW) AS RECEIPTS_DATENEW " +
                   "FROM RECEIPTS " +	 
				   "    INNER JOIN PAYMENTS ON RECEIPTS.ID = PAYMENTS.RECEIPT " +
				   "    INNER JOIN TICKETS ON RECEIPTS.ID = TICKETS.ID " +
                   "WHERE PAYMENTS.RECEIPT = RECEIPTS.ID AND " +
				   "?(QBF_FILTER) " +
                   "ORDER BY RECEIPTS_DATENEW ASC");
report.addParameter("RECEIPTS.DATENEW");
report.addParameter("RECEIPTS.DATENEW");
paramdates = new com.openbravo.pos.reports.JParamsDatesInterval();
paramdates.setStartDate(com.openbravo.beans.DateUtils.getToday());
report.addQBFFilter(paramdates);

report.addField("PAYMENTS_TOTAL", com.openbravo.data.loader.Datas.DOUBLE);
report.addField("TICKETS_TICKETID", com.openbravo.data.loader.Datas.INT);
report.addField("PAYMENTS_PAYMENT", com.openbravo.data.loader.Datas.STRING);
report.addField("RECEIPTS_DATENEW", com.openbravo.data.loader.Datas.TIMESTAMP);

report;

